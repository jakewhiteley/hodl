{
    "name": "jakewhiteley/hodl",
    "license": "MIT",
    "description": "A lightweight dependency injection cointainer for PHP, which sites inbetween Pimple and the Laravel Container",
    "authors": [
        {
            "name": "Jake Whiteley",
            "email": "jakebwhiteley@gmail.com"
        }
    ],
    "keywords": [
        "DI",
        "php",
        "container",
        "services",
        "inversion of control",
        "automatically resolve"
    ],
    "autoload": {
        "psr-4": {
            "Hodl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hodl\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0",
        "psr/container": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "sniff": [
          "vendor/bin/phpcs --extensions=php ."
        ],
        "fix": [
          "vendor/bin/php-cs-fixer fix",
          "vendor/bin/phpcbf --extensions=php ."
        ],
        "test": [
            "vendor/bin/phpunit --coverage-text"
        ],
        "report": [
            "vendor/bin/phpunit --coverage-html coverage"
        ]
    }
}
